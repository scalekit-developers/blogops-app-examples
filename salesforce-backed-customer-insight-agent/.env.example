# ScaleKit environment (required)
SCALEKIT_ENV_URL=
SCALEKIT_CLIENT_ID=
SCALEKIT_CLIENT_SECRET=

# Connected identities (required)
# These should match the email/identifier you used to authorize connectors in ScaleKit
SALESFORCE_IDENTIFIER=
SLACK_IDENTIFIER=

# Slack destination (required)
# Channel ID, e.g., C0123456789
DIGEST_CHANNEL_ID=

# Window and limits
# How many hours back to look for updates (default: 24)
LOOKBACK_HOURS=24
# Safety cap on records per object (default: 200)
MAX_RECORDS=200

# Salesforce link domain (optional)
# Your Lightning domain for deep links, without protocol. Example: mydomain.lightning.force.com
SALESFORCE_DOMAIN=

# Snapshot and redaction
# Where to store last-seen state between runs (default: sf_insights_snapshot.json)
SF_SNAPSHOT_FILE=sf_insights_snapshot.json
# Redact PII in text output
REDACT_EMAILS=true
REDACT_PHONES=true
