# Environment Configuration for GitHub â†’ Notion Release Notes Agent
"""
Copy this file to .env and fill in your values.
This agent listens for GitHub PR merged events, writes to Notion, and posts a Slack link via Scalekit tools.
"""

# ----------------------------------------------------------------------------
# Flask server
# ----------------------------------------------------------------------------
FLASK_ENV=development
FLASK_PORT=5000
FLASK_HOST=0.0.0.0

# ----------------------------------------------------------------------------
# GitHub
# ----------------------------------------------------------------------------

# GitHub
GITHUB_WEBHOOK_SECRET=your_webhook_secret
GITHUB_TOKEN="ghp_..."   # optional, increases rate limits for commits pagination
GITHUB_REPO_OWNER=your-username-or-org
GITHUB_REPO_NAME=your-repo

# Allow local testing without signature validation (for test scripts)
# Set to "true" for development, "false" or remove for production
ALLOW_LOCAL_TESTING=true

# ----------------------------------------------------------------------------
# Notion
# ----------------------------------------------------------------------------
NOTION_API_KEY=secret_notion_key
NOTION_DATABASE_ID=your_database_id
NOTION_PROP_TITLE=Name
NOTION_PROP_PR_SHA=PR SHA
NOTION_PROP_PR_NUMBER=PR Number
NOTION_PROP_REPO=Repository
NOTION_PROP_STATUS=Status
NOTION_PROP_CHANGES=Changes
NOTION_PROP_SUMMARY=Summary

# ----------------------------------------------------------------------------
# Slack via Scalekit (reusing your existing credentials)
# ----------------------------------------------------------------------------

SCALEKIT_ENV_URL=https://your-environment.scalekit.com
SCALEKIT_CLIENT_ID=your_client_id_here
SCALEKIT_CLIENT_SECRET=your_client_secret_here
SCALEKIT_DEFAULT_IDENTIFIER=your_scalekit_identifier
SLACK_ANNOUNCE_CHANNEL=C01234567

# ----------------------------------------------------------------------------
# Retries
# ----------------------------------------------------------------------------
RETRY_ATTEMPTS=3
RETRY_BACKOFF=1
